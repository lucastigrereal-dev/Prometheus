# PROMETHEUS V3 - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values

# ===================================
# AI PROVIDERS
# ===================================

# Claude (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT-4)
OPENAI_API_KEY=your-openai-api-key-here
GPT_MODEL=gpt-4-turbo-preview

# Google (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# ===================================
# DATABASE & STORAGE
# ===================================

# Supabase
SUPABASE_URL=your-supabase-url-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-key-here

# Redis (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================
# WEB & API
# ===================================

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
DASHBOARD_RELOAD=true

# ===================================
# SYSTEM SETTINGS
# ===================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Scheduler
SCHEDULER_ENABLED=false
SCHEDULER_TIMEZONE=America/Sao_Paulo

# Shadow Executor (Safety)
SHADOW_MODE=true
SHADOW_REQUIRE_CONFIRMATION=true

# ===================================
# INTEGRATIONS
# ===================================

# WhatsApp Cloud API
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# RD Station
RDSTATION_API_TOKEN=

# n8n
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=

# ===================================
# FILE PATHS
# ===================================

# Data directories
DATA_DIR=./data
LOGS_DIR=./logs
BACKUPS_DIR=./backups
PLAYBOOKS_DIR=./playbooks

# ===================================
# SECURITY
# ===================================

# Secret key for sessions (generate a random string)
SECRET_KEY=your-secret-key-change-this-in-production

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000
