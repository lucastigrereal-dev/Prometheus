# Prometheus Environment Variables
# Copy this file to .env and fill with your actual values

# ============================================
# AI MODELS API KEYS
# ============================================

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI GPT
OPENAI_API_KEY=sk-your-key-here

# Google Gemini
GOOGLE_API_KEY=AIza-your-key-here

# ============================================
# EXTERNAL SERVICES
# ============================================

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0/YOUR_PHONE_ID/messages
WHATSAPP_API_TOKEN=your_whatsapp_token_here

# RD Station CRM
RDSTATION_CLIENT_ID=your_client_id_here
RDSTATION_CLIENT_SECRET=your_client_secret_here
RDSTATION_REFRESH_TOKEN=your_refresh_token_here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_service_key_here

# n8n Automation
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# ============================================
# GOOGLE SERVICES
# ============================================

# Google OAuth (use credentials.json file instead)
# Path to credentials: ./credentials/google_credentials.json

# ============================================
# VISION & BROWSER
# ============================================

# Tesseract OCR Path (Windows)
TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# GPT-4 Vision (uses OPENAI_API_KEY above)
GPT4_VISION_ENABLED=false

# ============================================
# MEMORY & DATABASE
# ============================================

# Memory Database
MEMORY_DB_PATH=./memory/prometheus_memory.db

# Voice Transcriptions Database
VOICE_DB_PATH=./memory/voice_transcriptions.db

# ============================================
# SECURITY & LIMITS
# ============================================

# Max command execution time (seconds)
MAX_EXECUTION_TIME=300

# Max memory usage (MB)
MAX_MEMORY_MB=2048

# Enable debug mode
DEBUG=false

# ============================================
# OPTIONAL FEATURES
# ============================================

# Webhook for external triggers
WEBHOOK_SECRET=your_webhook_secret_here

# Telegram Bot (future feature)
TELEGRAM_BOT_TOKEN=your_telegram_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
